{
    "name": "web-sqlite.js",
    "version": "1.0.0",
    "description": "",
    "private": true,
    "type": "module",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "default": "./dist/index.js"
        }
    },
    "scripts": {
        "test": "npm run build && npm run test:e2e && npm run test:server",
        "http": "tsx scripts/http-service.ts ./ --port 8399",
        "test:e2e": "vitest run --config vitest.e2e.config.ts",
        "test:server": "vitest run tests/e2e/server.test.ts --environment node",
        "test:debug": "vitest run --config vitest.e2e.config.ts --no-file-parallelism",
        "build": "vite build",
        "build:watch": "vite build --watch",
        "lint": "eslint . --ext .ts,.js,.mjs --fix; npm run typecheck && npm run format",
        "lint:tmp": "eslint src/tmp --ext .ts,.js,.mjs --fix; npm run typecheck src/tmp && npm run format",
        "typecheck": "tsc --noEmit",
        "format": "prettier --ignore-path .gitignore --write ."
    },
    "devDependencies": {
        "@eslint/css": "^0.14.1",
        "@eslint/js": "^9.39.2",
        "@eslint/json": "^0.14.0",
        "@types/node": "^25.0.1",
        "@vitest/browser": "^4.0.15",
        "@vitest/browser-playwright": "^4.0.15",
        "@vitest/coverage-v8": "4.0.15",
        "@vitest/ui": "^4.0.15",
        "commander": "^14.0.2",
        "eslint": "^9.39.2",
        "globals": "^16.5.0",
        "http-server": "^14.1.1",
        "jiti": "^2.6.1",
        "playwright": "^1.57.0",
        "tsx": "^4.21.0",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.49.0",
        "vite": "^7.2.7",
        "vite-plugin-dts": "^4.5.4",
        "vitest": "^4.0.15"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/wuchuheng/web-sqlite-v2.git"
    },
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/wuchuheng/web-sqlite-v2/issues"
    },
    "homepage": "https://github.com/wuchuheng/web-sqlite-v2#readme"
}