{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "lib": ["ES2023"],
        "moduleResolution": "bundler",
        "strict": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "composite": true
    },
    "include": ["vite.config.ts", "eslint.config.mts"]
}
