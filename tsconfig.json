{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "moduleResolution": "bundler",
        "lib": ["ES2020", "DOM"],
        "strict": true,
        "skipLibCheck": true,
        "noEmitOnError": true,
        "allowArbitraryExtensions": true,
        "verbatimModuleSyntax": true
    },
    "include": ["src/**/*.mts"],
    "exclude": ["node_modules"]
}
