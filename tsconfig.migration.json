{
    // "extends": "./tsconfig.json",
    "compilerOptions": {
        "noEmit": false,
        "module": "ESNext",
        "target": "ES2022",
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": false,
        "sourceMap": false,
        "declaration": false,
        "declarationMap": false,
        "composite": false
    },
    "include": [
        "src/jswasm/utils/async-utils/*.ts",
        "src/jswasm/utils/utf8/*.ts",
        "src/jswasm/utils/memory-utils/*.ts",
        "src/jswasm/utils/path/*.ts"
    ],
    "exclude": [
        "src/**/*.test.ts",
        "src/**/*.d.ts"
    ]
}
